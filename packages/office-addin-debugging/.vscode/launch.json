  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-r",
        "ts-node/register",
        "${workspaceFolder}/test/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Command Line",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/debugging.js",
      "args": ["start", "manifest.xml", "--debug-method", "direct", "--no-live-reload", "--dev-server", "npm run dev-server", "--dev-server-port", "3000", "--sideload", "npm run sideload"],
      "cwd": "C:\\dev\\git\\FHL\\Office-Addin-Templates\\TaskPane",
      "autoAttachChildProcesses": true
    }
  ]
}
