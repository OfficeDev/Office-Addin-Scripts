  // tsconfig for editor must include both src and tests
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "strict": true,
    "declaration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES5",
