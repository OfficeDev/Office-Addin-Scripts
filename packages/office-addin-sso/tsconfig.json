{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "lib",
        "strict": false,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types/"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "lib",
    ]
}