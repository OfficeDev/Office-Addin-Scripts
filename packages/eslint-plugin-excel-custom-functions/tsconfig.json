{
  // tsconfig for editor must include both src and tests
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["ES2015"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmit": true,
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "types": ["node", "jest"],
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "node_modules/@types/**/*.d.ts"]
}
