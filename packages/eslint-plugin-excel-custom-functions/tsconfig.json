{
  "extends": "../../tsconfig.json",
  // tsconfig for editor must include both src and tests
  "compilerOptions": {
    "importHelpers": true,
    "lib": ["ES2015"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "newLine": "lf",
    "noEmit": true,
    "noEmitHelpers": true,
    "rootDir": ".",
    "types": ["node", "jest"],
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "node_modules/@types/**/*.d.ts"],
}
