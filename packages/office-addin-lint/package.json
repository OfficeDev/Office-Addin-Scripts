{
  "name": "office-addin-lint",
  "version": "1.0.0",
  "description": "Provide eslint and prettier integration",
  "main": "./lib/main.js",
  "scripts": {
    "cli": "node lib/cli.js",
    "tsc": "tsc -p tsconfig.json",
    "build": "rimraf lib && concurrently \"npm run tsc\"",
    "test": "mocha -r ts-node/register test/src/*.ts"
  },
  "author": "Office Dev",
  "license": "MIT",
  "bin": {
    "office-addin-lint": "lib/cli.js"
  },
  "config": {
    "lint_files": "src/**/*.{ts,tsx,js,jsx}"
  },
  "keywords": [
    "Office",
    "Office Add-in"
  ],
  "dependencies": {
    "assert": "^1.4.1",
    "commander": "^2.19.0",
    "office-addin-cli": "^0.2.5"
  },
  "devDependencies": {
    "@types/assert": "^1.4.2",
    "@types/commander": "^2.12.2",
    "@types/es6-promise": "^3.3.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.0",
    "@types/node-fetch": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "concurrently": "^3.6.1",
    "mocha": "^5.2.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/OfficeDev/Office-Addin-Scripts"
  },
  "bugs": {
    "url": "https://github.com/OfficeDev/Office-Addin-Scripts/issues"
  },
  "eslintConfig": {
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-eval": "error",
      "no-delete-var": "warn",
      "no-octal": "warn",
      "no-inner-declarations": "warn"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "extends": [
      "prettier",
      "prettier/@typescript-eslint"
    ]
  }
}
