{
    "compilerOptions": {
        "alwaysStrict": false,
        "declaration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "noImplicitUseStrict": true,
        "outDir": "lib",
        "resolveJsonModule" : true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
