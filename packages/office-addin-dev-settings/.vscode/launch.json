{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Command Line: clear",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["clear", "${workspaceFolder}\\test\\manifest.xml"]
    },
    {
      "name": "Command Line: disable-debugging",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["disable-debugging", "${workspaceFolder}\\test\\manifest.xml"]
    },
    {
      "name": "Command Line: disable-live-reload",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["disable-live-reload", "${workspaceFolder}\\test\\manifest.xml"]
    },
    {
      "name": "Command Line: disable-runtime-logging",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["disable-runtime-logging"]
    },
    {
      "name": "Command Line: enable-debugging",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["enable-debugging", "${workspaceFolder}\\test\\manifest.xml"]
    },
    {
      "name": "Command Line: enable-live-reload",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["enable-live-reload", "${workspaceFolder}\\test\\manifest.xml"]
    },
    {
      "name": "Command Line: enable-runtime-logging",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["enable-runtime-logging"]
    },
    {
      "name": "Command Line: get-source-bundle-url",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": [
        "get-source-bundle-url",
        "${workspaceFolder}\\test\\manifest.xml"
      ]
    },
    {
      "name": "Command Line: is-debugging-enabled",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["is-debugging-enabled", "${workspaceFolder}\\test\\manifest.xml"]
    },
    {
      "name": "Command Line: is-live-reload-enabled",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": [
        "is-live-reload-enabled",
        "${workspaceFolder}\\test\\manifest.xml"
      ]
    },
    {
      "name": "Command Line: is-runtime-logging-enabled",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": ["is-runtime-logging-enabled"]
    },
    {
      "name": "Command Line: set-source-bundle-url",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/lib/dev-settings.js",
      "args": [
        "set-source-bundle-url",
        "${workspaceFolder}\\test\\manifest.xml",
        "--host",
        "HOST",
        "--port",
        "PORT",
        "--path",
        "PATH",
        "--extension",
        ".EXT"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test",
        "-r",
        "ts-node/register",
        "${workspaceFolder}/test/**/*.ts"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
